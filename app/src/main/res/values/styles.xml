<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="AppTheme.Light.Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="AppTheme.Light.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="AppTheme.Light.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="AppTheme.Text.Small.Light">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--    TODO: rename this -->
    <style name="AppTheme.Text.Question" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/blueGray</item>
    </style>

    <style name="AppTheme.Text.Question.Highlight">
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="AppTheme.Text.Question.Light">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/radiobutton</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Large">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Button.Answer">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/question_option</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/blueGray</item>
        <item name="android:textSize">@dimen/text_size_display_2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.GroupBox">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPaddingBottom">30dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="contentPaddingTop">30dp</item>
    </style>

</resources>