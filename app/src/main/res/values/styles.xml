<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Question" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_display_2</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppTheme.Text.Question.Highlight">
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="AppTheme.Text.Question.Light">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/radiobutton</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Large">
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme.GroupBox">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPaddingBottom">30dp</item>
        <item name="contentPaddingLeft">20dp</item>
        <item name="contentPaddingRight">20dp</item>
        <item name="contentPaddingTop">30dp</item>
    </style>

</resources>